<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.ListaAdocoesFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:padding="10dp"
        android:text="Lista Doações"
        android:textSize="30sp" />

    <ListView
        android:id="@+id/lv_animais_listaadocoes"
        android:layout_width="match_parent"
        android:layout_height="580dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/bt_minuspage_listaadocoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30dip"
            android:text="Button" />

        <TextView
            android:id="@+id/tv_actualpage_listaadocoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="TextView" />

        <Button
            android:id="@+id/bt_pluspage_listaadocoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30dip"
            android:text="Button" />
    </LinearLayout>
</LinearLayout>