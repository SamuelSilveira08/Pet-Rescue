<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.UsuarioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_foto_usuario"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/perfil_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nome_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=":nome:" />

            <TextView
                android:id="@+id/tv_email_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=":email:" />

            <TextView
                android:id="@+id/tv_saldo_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=":dinheiro:" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_saldo_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:visibility="visible">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_saldo_adicional_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:hint="Valor" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/bt_adicionar_saldo_usuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:text="Depositar" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_editar_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Editar"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_conversar_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Enviar Mensagem"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/container_listas_usuario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_animais_usuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:listitem="@layout/item_lista_adocoes" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_vaquinhas_usuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingTop="20dp"
            tools:listitem="@layout/item_lista_vaquinhas" />

    </LinearLayout>

</LinearLayout>